<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wechat_image"
            android:scaleType="centerCrop"
            android:transitionName="shareView"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/wechat_title"
            android:textSize="18sp"
            android:layout_toRightOf="@id/wechat_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111111111111111111"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/wechat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wechat_image"
            android:layout_alignBottom="@id/wechat_image"
            android:layout_margin="10dp"
            android:textColor="#98989a"
            android:text="22222222222222"/>

        <TextView
            android:id="@+id/wechat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/wechat_image"
            android:layout_margin="10dp"
            android:textColor="#98989a"
            android:text="333333333333"/>


    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>